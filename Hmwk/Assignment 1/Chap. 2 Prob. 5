 * Purpose: Produce the average of 5 numbers.
 */

#include <iostream>

using namespace std;

int main() {

    int A = 28;
    int B = 32;
    int C = 37;
    int D = 24;
    int E = 33;
    
    int sum = A + B + C + D + E;
    int average = sum / 5;
    
    cout << "The sum of the numbers are: " << sum << endl;
    cout << "The average of the numbers are " << average << endl;
            
    return 0;
    
}

